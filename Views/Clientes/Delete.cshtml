@model laboratorio1ElvisOrtiz160625.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="mb-4 text-danger">Eliminar Cliente</h1>

<h4 class="mb-3">¿Estás seguro de que deseas eliminar este cliente?</h4>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Nombre)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Telefono)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Telefono)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Direccion)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Direccion)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Correo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.Correo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FechaRegistro)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(m => m.FechaRegistro)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
    </form>
</div>

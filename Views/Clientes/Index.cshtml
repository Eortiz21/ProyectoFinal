@model IEnumerable<laboratorio1ElvisOrtiz160625.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Lista de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Crear Nuevo
    </a>
</p>

<table class="table table-bordered table-hover table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-sm btn-info text-white me-1">
                        <i class="bi bi-eye-fill"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

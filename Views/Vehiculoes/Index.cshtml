@model IEnumerable<ProyectoParqueo.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Id_Cliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NoPlaca">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NoPlaca">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NoPlaca">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

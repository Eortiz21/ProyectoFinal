@model laboratorio1ElvisOrtiz160625.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container py-5">
    <h2 class="mb-4 text-warning fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Editar Proveedor
    </h2>

    <div class="card shadow-sm rounded-4 p-4" style="max-width: 600px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="IdProveedor" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                <input asp-for="Nombre" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Nombre del proveedor" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                <input asp-for="Telefono" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Teléfono" />
                <span asp-validation-for="Telefono" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label fw-semibold"></label>
                <input asp-for="Direccion" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Dirección" />
                <span asp-validation-for="Direccion" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Correo" class="form-label fw-semibold"></label>
                <input asp-for="Correo" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-3 justify-content-end">
                <button type="submit" class="btn btn-warning btn-lg shadow-sm">
                    <i class="bi bi-save me-1"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

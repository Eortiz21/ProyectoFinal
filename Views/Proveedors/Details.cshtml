@model laboratorio1ElvisOrtiz160625.Models.Proveedor

<div class="container py-5" style="max-width: 600px;">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-info-circle me-2"></i>Detalles del Proveedor
    </h2>

    <div class="card shadow-sm rounded-4 p-4">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4 fw-semibold">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>

            <dt class="col-sm-4 fw-semibold">Dirección</dt>
            <dd class="col-sm-8">@Model.Direccion</dd>

            <dt class="col-sm-4 fw-semibold">Correo</dt>
            <dd class="col-sm-8">@Model.Correo</dd>
        </dl>

        <div class="mt-4 d-flex gap-3 justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model.IdProveedor" class="btn btn-warning btn-lg shadow-sm">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>
</div>

@model laboratorio1ElvisOrtiz160625.Models.Proveedor

<div class="container py-5" style="max-width: 600px;">
    <h2 class="mb-4 text-danger fw-bold">
        <i class="bi bi-exclamation-triangle me-2"></i>Eliminar Proveedor
    </h2>

    <div class="card shadow-sm rounded-4 p-4">
        <h5 class="mb-4">¿Está seguro que desea eliminar este proveedor?</h5>

        <dl class="row">
            <dt class="col-sm-4 fw-semibold">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre</dd>

            <dt class="col-sm-4 fw-semibold">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>

            <dt class="col-sm-4 fw-semibold">Dirección</dt>
            <dd class="col-sm-8">@Model.Direccion</dd>

            <dt class="col-sm-4 fw-semibold">Correo</dt>
            <dd class="col-sm-8">@Model.Correo</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4 d-flex gap-3 justify-content-end">
            <input type="hidden" asp-for="IdProveedor" />
            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                <i class="bi bi-trash3-fill me-1"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Cancelar
            </a>
        </form>
    </div>
</div>

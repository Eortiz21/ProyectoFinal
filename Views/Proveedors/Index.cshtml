@model IEnumerable<laboratorio1ElvisOrtiz160625.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<!-- Estilos de DataTables -->
<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<h1>Proveedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<!-- Buscadores combinados -->
<div class="row mb-3">
    <!-- Búsqueda por servidor -->
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="buscar" value="@(ViewData["Busqueda"] ?? "")" class="form-control me-2" placeholder="Buscar proveedor..." />
            <button type="submit" class="btn btn-dark btn-sm">Buscar</button>
        </form>
    </div>


<table id="proveedoresTable" class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProveedor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProveedor">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Scripts de jQuery y DataTables -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#proveedoresTable').DataTable({
                "language": {
                    "search": "Buscar:",
                    "lengthMenu": "Mostrar _MENU_ registros",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

            $('#globalSearch').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}

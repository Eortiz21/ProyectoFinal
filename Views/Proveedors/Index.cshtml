@model IEnumerable<laboratorio1ElvisOrtiz160625.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<h1 class="mb-4">Listado de Proveedores</h1>

<!-- Buscador -->
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-controller="Proveedors" asp-action="Index" method="get" class="d-flex">
            <input type="text" name="buscar" value="@(ViewData["Busqueda"] ?? "")" class="form-control me-2" placeholder="Buscar proveedor..." />
            <button type="submit" class="btn btn-dark">Buscar</button>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
    </div>
</div>

<!-- Tabla de proveedores -->
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Direccion</td>
                <td>@item.Correo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-primary me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-info me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<laboratorio1ElvisOrtiz160625.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            padding: 30px;
            background-color: #f4f4f4;
        }

        h1 {
            font-size: 2.2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .btn {
            padding: 8px 14px;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            margin: 4px;
            text-decoration: none;
            color: white;
            display: inline-block;
            transition: background 0.2s ease-in-out;
        }

        .btn-primary { background-color: #007bff; }
        .btn-warning { background-color: #ffc107; color: black; }
        .btn-info    { background-color: #17a2b8; }
        .btn-danger  { background-color: #dc3545; }

        .table-responsive {
            overflow-x: auto;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        #globalSearch {
            margin-bottom: 20px;
            padding: 8px 12px;
            font-size: 1rem;
            border-radius: 4px;
            border: 1px solid #ccc;
            width: 100%;
            max-width: 400px;
        }

        /* 🔧 Tabla personalizada */
        table.dataTable {
            border-collapse: collapse !important;
            width: 100%;
        }

        table.dataTable thead th {
            background-color: #e9ecef;
            font-weight: bold;
            border: 1px solid #ccc !important;
            text-align: center;
            padding: 12px;
        }

        table.dataTable tbody td {
            border: 1px solid #ddd !important;
            text-align: center;
            padding: 10px;
        }

        .acciones {
            white-space: nowrap;
        }
    </style>
</head>
<body>

    <h1>Servicios</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
    </p>

    <input type="text" id="globalSearch" placeholder="Buscar en todos los campos..." />

    <div class="table-responsive">
        <table id="tablaServicios" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td class="acciones">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#tablaServicios').DataTable({
                responsive: true,
                scrollX: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });

            $('#globalSearch').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>

</body>
</html>

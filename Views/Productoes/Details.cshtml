@model laboratorio1ElvisOrtiz160625.Models.Producto

@{
    ViewData["Title"] = "Detalles Producto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i>Detalles del Producto
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Nombre)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Descripcion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Descripcion)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Categoria)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Categoria)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Precio)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Precio)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Stock)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Stock)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Lote)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Lote)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.FechaVencimiento)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.FechaVencimiento)</dd>
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Proveedor)</dt>
                        <dd class="col-sm-8">
                            @(Model.Proveedor != null ? Model.Proveedor.Nombre : "Sin proveedor")
                        </dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.Estado)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Estado)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(m => m.FechaRegistro)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.FechaRegistro)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-2"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Regresar a la lista
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

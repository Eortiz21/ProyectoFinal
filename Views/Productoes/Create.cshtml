@model laboratorio1ElvisOrtiz160625.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-plus-circle-fill me-2"></i>
                    <h4 class="mb-0">Nuevo Producto</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej. Leche entera" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Descripcion" class="form-label"></label>
                                <input asp-for="Descripcion" class="form-control" placeholder="Ej. Producto lácteo" />
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Categoria" class="form-label"></label>
                                <input asp-for="Categoria" class="form-control" placeholder="Ej. Lácteos" />
                                <span asp-validation-for="Categoria" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Precio" class="form-label"></label>
                                <input asp-for="Precio" class="form-control" placeholder="Ej. 25.50" />
                                <span asp-validation-for="Precio" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label"></label>
                                <input asp-for="Stock" class="form-control" placeholder="Ej. 100 unidades" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Lote" class="form-label"></label>
                                <input asp-for="Lote" class="form-control" placeholder="Ej. L12345" />
                                <span asp-validation-for="Lote" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FechaVencimiento" class="form-label"></label>
                                <input asp-for="FechaVencimiento" type="date" class="form-control" />
                                <span asp-validation-for="FechaVencimiento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="idProveedor" class="form-label"></label>
                                <select asp-for="idProveedor" class="form-select" asp-items="ViewBag.idProveedor">
                                    <option value="">Seleccione un proveedor</option>
                                </select>
                                <span asp-validation-for="idProveedor" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Estado" class="form-label"></label>
                                <select asp-for="Estado" class="form-select">
                                    <option value="">Seleccione estado</option>
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FechaRegistro" class="form-label"></label>
                                <input asp-for="FechaRegistro" type="date" class="form-control" />
                                <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Guardar Producto
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

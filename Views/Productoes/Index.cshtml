@{
    ViewData["Title"] = "Listado de Productos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            padding: 30px;
            background-color: #f4f4f4;
        }

        h1 {
            font-size: 2.2rem;
            margin-bottom: 20px;
        }

        .btn {
            padding: 6px 12px;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            margin: 4px 4px 4px 0;
            text-decoration: none;
            color: white;
            display: inline-block;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-warning {
            background-color: #ffc107;
            color: black;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .table-responsive {
            overflow-x: auto;
            background-color: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
        }

        table.dataTable thead th {
            font-size: 1rem;
        }

        table.dataTable tbody td {
            font-size: 0.95rem;
        }

        tfoot input {
            width: 100%;
            padding: 3px;
            box-sizing: border-box;
        }

        /* Estilo para la barra de búsqueda global */
        #globalSearch {
            margin-bottom: 20px;
            padding: 6px 12px;
            font-size: 1rem;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
    </style>
</head>
<body>

    <h1>Listado de Productos</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
    </p>

    <!-- Buscadores combinados -->
    <div class="row mb-3">
        <!-- Búsqueda en servidor -->
        <div class="col-md-6">
            <form asp-controller="Productoes" asp-action="Index" method="get" class="d-flex">
                <input type="text" name="buscar" value="@(ViewData["Busqueda"] ?? "")" class="form-control me-2" placeholder="Buscar por nombre (servidor)" />
                <button type="submit" class="btn btn-dark btn-sm">Buscar</button>
            </form>
        </div>

       
    <div class="table-responsive">
        <table id="tablaProductos" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Lote</th>
                    <th>Fecha Vencimiento</th>
                    <th>Proveedor</th>
                    <th>Estado</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Categoria</td>
                        <td>@item.Precio</td>
                        <td>@item.Stock</td>
                        <td>@item.Lote</td>
                        <td>@item.FechaVencimiento?.ToShortDateString()</td>
                        <td>@item.Proveedor?.Nombre</td>
                        <td>@item.Estado</td>
                        <td>@item.FechaRegistro?.ToShortDateString()</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdProducto">Editar</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdProducto">Detalles</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdProducto">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <!-- Script para la búsqueda global -->
    <script>
        $(document).ready(function () {
            var table = $('#tablaProductos').DataTable({
                responsive: true,
                scrollX: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });

            // Buscar en todas las columnas con el campo global de búsqueda
            $('#globalSearch').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
</body>
</html>

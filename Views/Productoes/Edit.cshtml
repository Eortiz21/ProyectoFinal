@model laboratorio1ElvisOrtiz160625.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container py-5">
    <h2 class="mb-4 text-primary fw-bold">
        <i class="bi bi-pencil-square me-2"></i>Editar Producto
    </h2>

    <div class="card shadow-sm border-0 rounded-4 p-5">
        <form asp-action="Edit" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="IdProducto" />

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Nombre del producto" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Categoria" class="form-label fw-semibold"></label>
                    <input asp-for="Categoria" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Categoría" />
                    <span asp-validation-for="Categoria" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descripcion" class="form-control form-control-lg rounded-3 shadow-sm" rows="3" placeholder="Descripción del producto"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Precio" class="form-label fw-semibold"></label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Precio" />
                    <span asp-validation-for="Precio" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Stock" class="form-label fw-semibold"></label>
                    <input asp-for="Stock" type="number" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Cantidad en stock" />
                    <span asp-validation-for="Stock" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Lote" class="form-label fw-semibold"></label>
                    <input asp-for="Lote" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Número de lote" />
                    <span asp-validation-for="Lote" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaVencimiento" class="form-label fw-semibold"></label>
                    <input asp-for="FechaVencimiento" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaRegistro" class="form-label fw-semibold"></label>
                    <input asp-for="FechaRegistro" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                    <span asp-validation-for="FechaRegistro" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="idProveedor" class="form-label fw-semibold"></label>
                    <select asp-for="idProveedor" class="form-select form-select-lg rounded-3 shadow-sm" asp-items="ViewBag.idProveedor">
                        <option value="">Seleccione un proveedor</option>
                    </select>
                    <span asp-validation-for="idProveedor" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Estado" class="form-label fw-semibold"></label>
                    <select asp-for="Estado" class="form-select form-select-lg rounded-3 shadow-sm">
                        <option value="">Seleccione estado</option>
                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-5 d-flex gap-3 justify-content-end">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-check-circle me-1"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

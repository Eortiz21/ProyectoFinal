@model IEnumerable<laboratorio1ElvisOrtiz160625.Models.Mascota>

@{
    ViewData["Title"] = "Lista de Mascotas";
}

<h1 class="mb-4">Lista de Mascotas</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Crear Nueva
    </a>
</p>

<table class="table table-bordered table-hover table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Especie)</th>
            <th>@Html.DisplayNameFor(model => model.Raza)</th>
            <th>@Html.DisplayNameFor(model => model.Edad)</th>
            <th>@Html.DisplayNameFor(model => model.Peso)</th>
            <th>@Html.DisplayNameFor(model => model.Sexo)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente)</th>
            <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Especie)</td>
                <td>@Html.DisplayFor(modelItem => item.Raza)</td>
                <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdMascota" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdMascota" class="btn btn-sm btn-info text-white me-1">
                        <i class="bi bi-eye-fill"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdMascota" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

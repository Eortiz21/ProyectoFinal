@model laboratorio1ElvisOrtiz160625.Models.Mascota

@{
    ViewData["Title"] = "Detalles Mascota";
}

<h1>Detalles de Mascota</h1>

<hr />

<div class="card p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Especie</dt>
        <dd class="col-sm-9">@Model.Especie</dd>

        <dt class="col-sm-3">Raza</dt>
        <dd class="col-sm-9">@Model.Raza</dd>

        <dt class="col-sm-3">Edad</dt>
        <dd class="col-sm-9">@Model.Edad</dd>

        <dt class="col-sm-3">Peso</dt>
        <dd class="col-sm-9">@Model.Peso</dd>

        <dt class="col-sm-3">Sexo</dt>
        <dd class="col-sm-9">@Model.Sexo</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Nombre</dd>

        <dt class="col-sm-3">Fecha de Registro</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.IdMascota" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>

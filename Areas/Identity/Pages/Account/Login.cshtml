@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Iniciar sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Segoe UI", sans-serif;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: white;
            border-radius: 16px;
            padding: 40px 30px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 24px;
                color: #333;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 6px;
                font-weight: 600;
                color: #444;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 8px;
                outline: none;
                font-size: 15px;
            }

        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .form-check input {
                margin-right: 8px;
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #2575fc;
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-login:hover {
                background: #1a5edb;
            }

        .text-danger {
            color: red;
            font-size: 13px;
        }

        .extra-links {
            text-align: center;
            margin-top: 16px;
        }

            .extra-links a {
                color: #2575fc;
                text-decoration: none;
                font-size: 14px;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar sesión</h2>
        <form method="post" id="account">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Correo electrónico</label>
                <input asp-for="Input.Email" type="email" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="Input.RememberMe" type="checkbox" />
                <label asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <button type="submit" class="btn-login">Iniciar sesión</button>

            <div class="extra-links">
                <p><a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear cuenta nueva</a></p>
                <p><a asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a></p>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
